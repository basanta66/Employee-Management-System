
@{
    ViewData["Title"] = "Jquery";
}
<form id="myForm">
    <label for="name">Name:</label>
    <input type="text" id="name" required><br><br>
    <label for="age">Age:</label>
    <input type="number" id="age" required><br><br>
    <label for="married">Married:</label>
    <input type="checkbox" id="married"><br><br>
    <label for="gender">Gender:</label>
    <select id="gender" required>
        <option value="">Select</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
        <option value="other">Other</option>
    </select><br><br>
    <input type="submit" value="Submit">
</form>
<script>
    $(document).ready(function () {
    // When the married checkbox is checked, set the age to 25
    $("#married").change(function () {
    if ($(this).is(":checked")) {
    $("#age").val("25");
    } else {
    // Reset the age to an empty value if unchecked
    $("#age").val("");
    }
    });
    // When the submit button is clicked, validate the form
    $("#myForm").submit(function (event) {
    var name = $("#name").val();
    var age = $("#age").val();
    var gender = $("#gender").val();
    // Check if all fields are filled
    if (name === "" || age === "" || gender === "") {
    alert("Please fill in all fields!");
    event.preventDefault(); // Prevent form submission
    }
    });
    });
</script>